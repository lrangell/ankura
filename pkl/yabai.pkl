}

class Yabai {
  modifier: (String | List<String>)? = null
  mod = modifier ?? ""

  window: Window?
  space: Space?
  display: Display?
  toggles: Toggles?
  stack: Stack?

  build: List<karabiner.Rule> = 
    List(
      window?.build(modifier),
      space?.build(modifier),
      display?.build(modifier),
      toggles?.build(modifier),
      stack?.build(modifier)
    ).filterNonNull().flatten()

}
